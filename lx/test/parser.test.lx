  assert.equal(node.left.left.name, "a")
  assert.equal(node.left.right.type, NODE.Call)
  assert.equal(node.left.right.callee.name, "f")
  assert.equal(node.right.type, NODE.Call)
  assert.equal(node.right.callee.name, "g")
})

