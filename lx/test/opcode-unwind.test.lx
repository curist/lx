// Test that OP_UNWIND is properly defined

let suite = (import "test/makeTestSuite.lx")()
let test = suite.defineTest
let types = import "src/types.lx"
let OP = types.OP
let OP_NAME = types.OP_NAME

test("OP_UNWIND opcode is defined", fn(assert) {
  assert.truthy(OP.UNWIND, "OP.UNWIND should be defined")
  assert.truthy(OP.UNWIND >= 0, "OP.UNWIND should have a valid value")
  assert.truthy(OP.UNWIND < OP.RETURN, "OP.UNWIND should come before OP.RETURN")
})

test("OP_UNWIND has correct name mapping", fn(assert) {
  assert.equal(OP_NAME[OP.UNWIND], "UNWIND", "OP_NAME should map OP.UNWIND to 'UNWIND'")
})

suite.run()
