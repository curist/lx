// Simple arg parsing helpers for benchmarks
fn argInt(index, default) {
  // Lx.args: [lx, run, script, arg1, ...]
  let s = Lx.args[index + 2]
  if !s { return default }
  // tonumber handles string->number conversion
  let n = tonumber(s)
  if type(n) != "number" { return default }
  n
}

.{
  argInt: argInt,
}
